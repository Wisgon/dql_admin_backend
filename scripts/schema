# Define Types
type User {
  user_name
  pwd
  phone_number
  email
  role
}

type Role {
  name
}


# Define Directives and index
user_name: string @index(hash) @upsert .
pwd: password .
phone_number: string @index(hash) @upsert .
email: string @index(hash) @upsert .


name: string @index(hash) .
role: [uid] @reverse .
