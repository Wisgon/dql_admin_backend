# =============Define Types
type User {
  user_name
  pwd
  phone_number
  avatar
  role
}

type Role {
  role_id
  name
}


# =============Define Predicates

user_name: string @index(hash) @upsert .
pwd: password .
phone_number: string @index(hash) @upsert .
avatar: string .
role: [uid] @reverse .

name: string @index(hash) .
role_id: string @index(hash) @upsert .

